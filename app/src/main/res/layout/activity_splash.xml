<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.dingmouren.easymvp.view.CustomVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.dingmouren.easymvp.view.TimerTextView
        android:id="@+id/tv_splash"
        android:layout_width="@dimen/timer_width"
        android:layout_height="@dimen/timer_height"
        android:gravity="center"
        android:clickable="true"
        android:text="3s"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/circle_shape_count_down"
        />

</RelativeLayout>