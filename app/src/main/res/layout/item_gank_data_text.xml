<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/category_item_margin_20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/category_item_title_15sp"
            android:text="基于material design support的开源学习项目(Github)"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/tv_anthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/category_item_subtitle_12sp"
            android:text="作者：daimajia"
            android:padding="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/category_item_subtitle_12sp"
            android:layout_alignParentRight="true"
            android:text="2016/12/12"
            android:padding="@dimen/dp_5"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>