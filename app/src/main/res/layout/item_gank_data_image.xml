<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_girl_height_200dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#aa000000"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/category_item_title_15sp"
                android:text="基于material design support的开源学习项目(Github)"
                android:textColor="@android:color/white"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:padding="@dimen/dp_3"
                />
            <TextView
                android:id="@+id/tv_anthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:text="作者：daimajia"
                android:textColor="@android:color/white"
                android:textSize="@dimen/category_item_subtitle_12sp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:padding="@dimen/dp_5"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/category_item_subtitle_12sp"
                android:layout_alignParentRight="true"
                android:text="2016/12/12"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:padding="@dimen/dp_5"
                />
        </RelativeLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>