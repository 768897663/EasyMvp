<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_itemHome_girl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/card_itemHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_itemHome_girl"
        android:layout_marginTop="@dimen/gallery_margin"
        android:padding="@dimen/dp_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--内容：来自话题、作者-->
            <RelativeLayout
                android:id="@+id/relative_itemHome_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                >
                <!--话题图片-->
                <ImageView
                    android:id="@+id/img_itemHome_first"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    />
                <!--来自话题-->
                <TextView
                    android:id="@+id/tv_itemHome_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_itemHome_first"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@android:color/darker_gray"
                    />
                <!--作者-->
                <TextView
                    android:id="@+id/tv_itemHome_anthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_itemHome_first"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@android:color/darker_gray"
                    />

            </RelativeLayout>
            <!--干货的标题-->
            <TextView
                android:id="@+id/tv_itemHome_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_itemHome_first"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <!--显示第一张图片-->
            <ImageView
                android:id="@+id/img_itemHome_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_itemHome_title"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>